                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/zero_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textSize="24sp"
                            android:textColor="@color/calculator_color"
                            android:padding="8dp"
                            android:layout_marginRight="1dp"
                            android:textAllCaps="false"
                            android:background="@color/calculator_foreground"
                            android:text="@string/zero_button" />
                        <Button
                            android:id="@+id/division"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="24sp"
                            android:padding="8dp"
                            android:textAllCaps="false"
                            android:layout_marginRight="1dp"
                            android:textColor="@color/calculator_color"
                            android:background="@color/calculator_foreground"
                            android:text="@string/division" />
                        <Button
                            android:id="@+id/subtraction"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="24sp"
                            android:padding="8dp"
                            android:textAllCaps="false"
                            android:layout_marginRight="1dp"
                            android:textColor="@color/calculator_color"
                            android:background="@color/calculator_foreground"
                            android:text="@string/subtraction" />



                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/equal_sign"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="24sp"
                        android:padding="8dp"
                        android:textAllCaps="false"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="1dp"
                        android:textColor="@color/calculator_color"
                        android:background="#72c94f"
                        android:text="@string/equal_sign" />
                </LinearLayout>


            </LinearLayout>
            <!--Twelve Row 5 Buttons-->
            <LinearLayout
                android:id="@+id/twelve_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/dot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:padding="8dp"
                    android:textAllCaps="false"
                    android:layout_marginRight="1dp"
                    android:textColor="@color/calculator_color"
                    android:background="@color/calculator_foreground"
                    android:text="@string/dot" />
                <Button
                    android:id="@+id/exp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:padding="8dp"
                    android:textAllCaps="false"
                    android:layout_marginRight="1dp"
