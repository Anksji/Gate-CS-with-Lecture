<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_list_back">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#64B5F6"
        android:id="@+id/my_linear">




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/yearInfo">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/Qnum"
    android:layout_alignParentLeft="true"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Quest : "
        android:id="@+id/QuestView"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16dp"
        android:text="Medium Text"
        android:id="@+id/questio_no" />


</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/Qnu"
            android:layout_centerInParent="true"
            android:weightSum="1"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="16dp"
                android:text="Marks : "
                android:id="@+id/MarksView"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="16dp"
                android:text="23"
                android:id="@+id/quest_marks" />


        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentRight="true"
    android:weightSum="1"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16dp"
        android:layout_marginLeft="20dp"

        android:text="Year : "
        android:id="@+id/YearView"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16dp"
        android:text="Medium Text"
        android:id="@+id/year"
        android:layout_gravity="center_horizontal" />

</LinearLayout>




    </RelativeLayout>
    </LinearLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/my_linear">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_above="@+id/RadioAndbutton">

        <WebView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/webView"
            android:layout_gravity="center_horizontal"


            />
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/RadioAndbutton"
        android:layout_above="@+id/adView"
            android:background="#252424"
        >
        <ViewFlipper
            android:id="@+id/ViewFlipper01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/GroupRadio">
                <RadioGroup

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/radiogroup"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="#607D8B">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:buttonTint="@color/your_color"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:id="@+id/radioButton" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:buttonTint="@color/your_color"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:id="@+id/radioButton2" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:buttonTint="@color/your_color"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/radioButton3" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D"
                        android:buttonTint="@color/your_color"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:id="@+id/radioButton4" />


                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Edit_Text_answer">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#8f9fb9"
                    android:textColor="#000000"
                    android:textColorHint="#353535"
                    android:padding="10dp"
                    android:inputType="numberSigned|numberDecimal"
                    android:digits="1234567890+-."
                android:id="@+id/input_answer"
                    android:hint="Enter Answer"/>


            </RelativeLayout>


        </ViewFlipper>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="PREV"


        android:id="@+id/button3"
        android:layout_gravity="right"
        android:layout_weight="1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Clear"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:id="@+id/button4"
        android:layout_weight="1"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Review"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:id="@+id/button5"
        android:layout_weight="1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:padding="5dp"

        android:text="NEXT"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:id="@+id/button2"

        />


</LinearLayout>


        </RelativeLayout>



    </LinearLayout>

    <com.google.android.gms.ads.AdView

        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        android:background="#000000"
        ads:adUnitId="@string/banner_during_question_paper">

    </com.google.android.gms.ads.AdView>

<!--
    <com.startapp.android.publish.banner.Banner

        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    -->

</RelativeLayout>




</RelativeLayout>